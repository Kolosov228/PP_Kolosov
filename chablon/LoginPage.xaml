<Page x:Class="chablon.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:chablon"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="780" Height="430">
            <Label FontSize="20" HorizontalAlignment="Center"  Content="Авторизация"></Label>
            <TextBlock FontSize="20"  Text="Логин"/>
            <TextBox x:Name="TxbLogin" Height="53"/>
            <TextBlock FontSize="20" Text="Пароль"/>
            <TextBox x:Name="TxbPassword" Height="57" RenderTransformOrigin="0.504,0.457"/>
            <Button FontSize="24" Margin="150"  Width="480" Height="77" Content="Войти" Click="Button_Click"/>

        </StackPanel>


    </Grid>
</Page>