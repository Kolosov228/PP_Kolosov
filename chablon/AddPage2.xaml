<Window x:Class="chablon.AddPage2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chablon"
        mc:Ignorable="d"
        Title="AddPage" Height="446" Width="461"
        >
    <Grid Margin="0,0,10,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="250"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>



        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" Background="AliceBlue" Margin="0,40,0,179" RenderTransformOrigin="0.4,0.594"><Run Language="ru-ru"/><Run Text="Наименование отдела"/></TextBlock>

        <TextBox Text="{Binding Name}" MaxLength="50" Grid.Column="1" Width="261" Background="AliceBlue"  HorizontalAlignment="Left" Margin="0,0,0,118"/>

        <Button Content="Сохранить" Grid.ColumnSpan="2" Name="BtnSave" Click="BtnSave_Click" Margin="0,317,-11,0" Background="Aqua"/>
    </Grid>
</Window>
